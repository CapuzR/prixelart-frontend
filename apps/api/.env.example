# Runtime environment
NODE_ENV=development
PORT=8000

# Frontend origins
FRONT_END_URL=http://localhost:5173
ADMIN_FRONT_END_URL=http://localhost:4173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173

# Session / cookies
SESSION_KEYS=dev_session_key_primary,dev_session_key_secondary
SESSION_NAME=session
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_SAMESITE=lax
ADMIN_COOKIE_DOMAIN=
ADMIN_COOKIE_SECURE=
ADMIN_COOKIE_SAMESITE=
TRUST_PROXY=0

# Mongo / persistence
MONGO_URI=mongodb://localhost:27017/prixelart

# Auth
JWT_SECRET=replace_me
ADMIN_JWT_SECRET=replace_me
TOKEN_EXPIRE_TIME=2h
ADMIN_TOKEN_EXPIRE_TIME=2h
RESET_PASSWORD_KEY=replace_me

# Email / transactional services
MAILGUN_API_KEY=replace_me

# DigitalOcean Spaces / S3
DO_SPACES_REGION=nyc3
PRIVATE_BUCKET_URL=cdn.prixelart.local
PUBLIC_BUCKET_URL=cdn-public.prixelart.local
PRIVATE_BUCKET_NAME=prixelart-private
PUBLIC_BUCKET_NAME=prixelart-public
DO_ACCESS_KEY=replace_me
DO_ACCESS_SECRET=replace_me

