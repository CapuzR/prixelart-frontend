{
  "compilerOptions": {
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@*": ["*"]
    },
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "./src",
    "types": ["node", "react"]
  },
  "include": ["src", "src/types/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
