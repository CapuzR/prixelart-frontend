{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@*": ["*"]
    },
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "react"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
