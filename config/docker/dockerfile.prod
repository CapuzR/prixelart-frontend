# Producción
FROM node:20-slim AS build
WORKDIR /frontend

# Install deps
COPY package*.json ./
RUN npm ci

# Copy rest and build
COPY . ./
RUN npm run build

# ── Production image ───────────────────────────────
FROM nginx:1.17-alpine
COPY --from=build /frontend/build /usr/share/nginx/html
COPY config/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
