{
  "compilerOptions": {
    "baseUrl": ".",
    
    "paths": {
      "@/*": ["./src/*"],

      "@api/*": ["./src/api/*"],
      "@apps/*": ["./src/apps/*"],
      "apps/*": ["./src/apps/*"],
      "context/*": ["./src/context/*"],
      "@context/*": ["./src/context/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "components/*": ["./src/components/*"],
      "api/*": ["./src/api/*"],
      "data/*": ["./src/data/*"],
      "@data/*": ["./src/data/*"],
      "lib/*": ["src/lib/*"],
      "hooks/*": ["./src/hooks/*"],
      "styles/*": ["./src/styles/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "@utils/*": ["./src/utils/*"],
      "images/*": ["./src/images/*"],
      "assets/*": ["./src/assets/*"]
    },

    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "./src",
    "types": ["node", "react"]
  },
  "include": ["src", "src/types/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}